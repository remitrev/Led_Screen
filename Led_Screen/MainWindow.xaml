<Window x:Class="Led_Screen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Led_Screen"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Button x:Name="start" Content="Search Bluetooth Devices" HorizontalAlignment="Left" VerticalAlignment="Top" Width="157" Margin="25,50,0,0" Click="Button_Click_1" Height="46"/>
        <ListBox x:Name="bluetoothDevicesListBox" HorizontalAlignment="Left" Height="310" VerticalAlignment="Top" Width="248" Margin="203,23,0,0" SelectionChanged="ListBox_SelectionChanged_1"/>
        <Button x:Name="sendMessage" Content="Send Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Margin="25,157,0,0" Height="37" Click="Button_Click_2"/>
        <TextBox x:Name="message" HorizontalAlignment="Left" Height="23" Margin="31,268,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
